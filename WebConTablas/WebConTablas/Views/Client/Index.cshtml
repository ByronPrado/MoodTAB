@model List<Client>

<h2>Clientes</h2>
<a href="/Client/Create" class="btn btn-primary mb-3">Agregar Cliente</a>

<table class="table table-striped">
    <thead>
        <tr><th>Id</th><th>Nombre Completo</th><th>Email</th><th>Acciones</th></tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.FullName</td>
                <td>@c.Email</td>
                <td>
                    <a href="/Client/Edit/@c.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a href="/Client/Delete/@c.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Â¿Seguro que quieres borrar este cliente?');">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
