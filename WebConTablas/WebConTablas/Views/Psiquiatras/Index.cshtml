@model List<Psiquiatras>

<h2>Psiquiatras</h2>
<a href="/Psiquiatras/Create" class="btn btn-primary mb-3">Agregar Psiquiatra</a>

<table class="table table-striped">
    <thead>
        <tr><th>Id</th><th>Nombre Completo</th><th>Email</th><th>Password</th><th>Acciones</th></tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>@c.Correo</td>
                <td>@c.Password</td>
                <td>
                    <a href="/Psiquiatras/Edit/@c.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a href="/Psiquiatras/Delete/@c.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Â¿Seguro que quieres borrar este psiquiatra?');">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>