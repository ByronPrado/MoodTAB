<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Web con Tablas</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Mi Web</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Psiquiatras" asp-action="Index">Psiquiatras</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Pacientes" asp-action="Index">Pacientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Formularios" asp-action="Index">Formularios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Preguntas" asp-action="Index">Preguntas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="FormulariosAsignados" asp-action="Index">Asignar Formularios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="FormularioPreguntas" asp-action="Asignar" asp-route-id="1">Asignar Preguntas</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
