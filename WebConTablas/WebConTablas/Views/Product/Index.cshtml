@model List<Product>

<h2>Productos</h2>
<a href="/Product/Create" class="btn btn-primary mb-3">Agregar Producto</a>

<table class="table table-striped">
    <thead>
        <tr><th>Id</th><th>Nombre</th><th>Precio</th><th>Acciones</th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Price.ToString("C")</td>
                <td>
                    <a href="/Product/Edit/@p.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a href="/Product/Delete/@p.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Â¿Seguro que quieres borrar este producto?');">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
