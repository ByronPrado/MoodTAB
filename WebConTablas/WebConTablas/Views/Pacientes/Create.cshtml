@model WebConTablas.Models.Paciente

<h2>Agregar Paciente</h2>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Edad" class="form-label">Edad</label>
        <input asp-for="Edad" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Sexo" class="form-label">Sexo</label>
        <input asp-for="Sexo" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Telefono" class="form-label">Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
    </div>
        <div class="mb-3"></div>
        <label asp-for="Diagnostico" class="form-label">Diagnóstico (opcional)</label>
        <input asp-for="Diagnostico" class="form-control" />
        <span asp-validation-for="Diagnostico" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-controller="Psiquiatras" asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

