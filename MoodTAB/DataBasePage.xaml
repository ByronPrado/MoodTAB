<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MoodTAB.ViewModel"
             x:Class="MoodTAB.DataBasePage"
             Title="Vista de Base de Datos">


    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Vista de Datos en Base de Datos" FontSize="20" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding Items}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Nombre}" />
                                <Label Text="{Binding CreatedAt}" FontSize="10" TextColor="Gray" />
                                <Label Text="check" IsVisible="{Binding IsDone}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>