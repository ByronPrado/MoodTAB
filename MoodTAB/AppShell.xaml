<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MoodTAB.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MoodTAB"
    xmlns:vm="clr-namespace:MoodTAB.ViewModel"
    Title="MoodTAB">

    <!-- Flyout Items -->
    <FlyoutItem Title="Inicio" Icon="house_blank.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
        <FlyoutItem Title="Base de Datos" Icon="sql_server.png">
        <ShellContent ContentTemplate="{DataTemplate local:DataBasePage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="Cuestionario" Icon="survey.png">
        <ShellContent ContentTemplate="{DataTemplate local:CuestionarioPage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="Agregar Preguntas" Icon="plus.png">
        <ShellContent ContentTemplate="{DataTemplate local:AddPreguntaPage}" />
    </FlyoutItem>
</Shell>