<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:MoodTAB.ViewModel" 
             x:Class="MoodTAB.Vistas.MainPage">

        <ScrollView
            BackgroundColor="#FFF3F3FF">
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Frame con título de la API -->
            <Frame CornerRadius="12"
                   Padding="15"
                   BackgroundColor="White"
                   BorderColor="#90CAF9">
                   <Grid
                        ColumnSpacing="0"
                        RowSpacing="10"
                        HorizontalOptions="Fill"
                        VerticalOptions="Center"
                        RowDefinitions="Auto,Auto">
                        <Label Text="{Binding Title}"
                            Grid.Row="0"
                            FontSize="14"
                            FontAttributes="Bold"
                            TextColor="Black"
                            />
                       <Label Text="{Binding TitleApi}"
                            Grid.Row="1"/>
                       </Grid>
                
            </Frame>

            <!-- Sección Actividades -->
            <Label Text="Actividades Pendientes"
                   FontSize="22"
                   TextColor="Black"
                   Margin="0,10,0,0"/>

            <VerticalStackLayout Spacing="15">
                <Button Text="Cuestionario"
                        Command="{Binding MovetoPageCommand}"
                        CommandParameter="CuestionarioPage"
                        BackgroundColor="#5C91D8"
                        />

                <Button Text="Diario Emocional"
                        Command="{Binding MovetoPageCommand}"
                        CommandParameter="DiarioPage"
                        BackgroundColor="#68ACD5"
                        />
            </VerticalStackLayout>

            <!-- Sección Debug -->
            <Label Text="Debug"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="Gray"
                   Margin="0,20,0,0"/>

            <Button Text="Test"
                    Command="{Binding MovetoPageCommand}"
                    CommandParameter="TestPage"
                    BackgroundColor="Red"
                    />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
