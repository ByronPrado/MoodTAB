             x:Class="MoodTAB.Vistas.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="MoodTAB - Iniciar SesiÃ³n" FontSize="24" HorizontalOptions="Center"/>

        <Label Text="{Binding LogsMessage}" TextColor="Blue" FontSize="14" HorizontalOptions="Center"/>

