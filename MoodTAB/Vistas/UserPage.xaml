<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoodTAB.Vistas.UserPage"
             Title="UserPage">
    <VerticalStackLayout>
    <Button Text="Cerrar sesión" Clicked="OnLogoutClicked" />
    <Grid 
        ColumnDefinitions="auto"
        RowDefinitions="auto,auto,auto,auto"
        Padding="10"
        RowSpacing="10"
        >
        <Image  Grid.Row="0" Source="dotnet_bot.png"/>
        <Label  Grid.Row="1" Text="Nombre de Usuario"/>
        <Label Grid.Row="2" Text="Correo Electrónico"/>
        <Label Grid.Row ="3" Text="Telefono"/> 


        </Grid>
    <Button Text="editar sin func" Clicked ="onEditClicked"/>

    </VerticalStackLayout>
</ContentPage>