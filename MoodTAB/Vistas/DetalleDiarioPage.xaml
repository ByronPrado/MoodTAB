<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoodTAB.Vistas.DetalleDiarioPage"
             Title="Detalle Diario">

    <VerticalStackLayout Padding="20">
        <Label Text="Pregunta:" FontAttributes="Bold" />
        <Label Text="{Binding Descripcion}" FontSize="14" />

        <Label Text="Respuesta:" FontAttributes="Bold" />
        <Label Text="{Binding CreatedAt}" FontSize="16" />
    </VerticalStackLayout>
</ContentPage>